{
    "name": "hotreload",
    "version": "1.0.0",
    "description": "A dead simple BrowserSync hot-reload server with Tailwind CSS 3",
    "main": "index.js",
    "scripts": {
        "bs": "browser-sync start --server \"src\" --files \"*.*\"",
        "css": "npx tailwindcss -i ./src/css/tailwind.css -o ./src/css/styles.css --watch",
        "dev": "run-p css bs"
    },
    "author": "Erik S. Olsen",
    "license": "ISC",
    "devDependencies": {
        "browser-sync": "^2.27.10",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "tailwindcss": "^3.1.7"
    }
}